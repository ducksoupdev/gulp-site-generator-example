{{> header}}

{{> navigation}}

<div class="container">

    {{#post}}
        <div class="row">
            <div class="col-sm-8 blog-main">
                <h1 class="blog-title">{{title}}</h1>
                <p class="blog-post-meta">{{date format="MMMM Do YYYY"}} by <span>{{author.name}}</span>{{#if tags}} on {{{tags}}}{{/if}}</p>
                {{{body}}}
            </div>
            <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
                {{> sidebar}}
            </div>
        </div>
    {{/post}}

</div>

{{> footer}}

{{> header}}

{{> navigation}}

<div class="container">

    <div class="blog-header">
        <h1 class="blog-title">{{site.title}}</h1>
        {{#if tag}}
            <p>Posts tagged: {{tag}}</p>
        {{else}}
            {{#if dateStr}}
                <p>Posts dated: {{dateStr}}</p>
            {{else}}
                <p class="lead blog-description">{{site.description}}</p>
            {{/if}}
        {{/if}}
    </div>

    <div class="row">
        <div class="col-sm-8 blog-main">
            <div class="posts-container js-posts-container clearfix">
                {{> loop}}
            </div>

            {{> pagination}}

        </div>
        <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
            {{> sidebar}}
        </div>
    </div>

</div>

<h1>{{site.testVar}}</h1>

{{> footer}}
